-- ლოგიკა (ფუნქციები)
----------------------------------------------------------------

-- ჩაკეცვა
minButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    openButton.Visible = true
end)

-- გახსნა
openButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    openButton.Visible = false
end)

-- დროის ფორმატირების ფუნქცია (00:00:00)
local function formatTime(seconds)
    local hours = math.floor(seconds / 3600)
    local minutes = math.floor((seconds % 3600) / 60)
    local secs = seconds % 60
    return string.format("%02d:%02d:%02d", hours, minutes, secs)
end

-- Anti-AFK ლოგიკა
local function activateAntiAfk()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
    
    -- მთვლელის გაზრდა
    afkCount = afkCount + 1
    countLabel.Text = "AFK დაცვა: " .. afkCount .. "-ჯერ"
    
    -- ვიზუალური ეფექტი
    statusLabel.Text = "AFK გაგდებისაგან დაგიცავი!"
    statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    
    wait(2)
    
    statusLabel.Text = "სტატუსი: აქტიურია"
    statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
end

Players.LocalPlayer.Idled:Connect(activateAntiAfk)

-- დროის დამთვლელი ციკლი (ყოველ წამს განახლდება)
task.spawn(function()
    while true do
        local currentTime = tick()
        local elapsedTime = currentTime - startTime
        
        timeLabel.Text = "მუშაობის დრო: " .. formatTime(elapsedTime)
        
        task.wait(1)
    end
end)

print("Georgian Anti-AFK V2 Loaded by Smile B")
